@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Estoque - Entrada - Lista";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/IndexAdministrador?usuario_id=@ViewBag.UsuarioID">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Estoque</li>
    </ol>
</nav>

<div class="jumbotron">
    <h3>Lista de entrada de produtos no estoque</h3>
    <p class="lead">
        Lista com todos as entradas de produtos no estoque cadastradas
    </p>
    <hr class="my-4">
    <p>Para registrar uma nova entrada de produto no estoque clique no botão abaixo.</p>
    <a class="btn btn-primary" href="~/Estoque/Entrada?usuario_id=@ViewBag.UsuarioID" role="button">Nova entrada</a>
</div>

<table class="table d-none" id="table_entradas">
    <thead>
        <tr>
            <th scope="col" class='text-center'>#</th>
            <th scope="col" class='text-center'>Codigo</th>
            <th scope="col" class='text-left'>Produto</th>
            <th scope="col" class='text-center'>Quantidade</th>
            <th scope="col" class='text-center'>Data</th>
            <th scope="col" class='text-center'>Opções</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="d-none" id="content_list_message">
    <label class="alert alert-danger" id="message_fail">Falha ao carregar lista de entradas de produtos no estoque.</label>
</div>

<div class="row d-none" id="content_list_loader">
    <img src="~/Content/images/loader.gif" />
</div>


<script src="~/Scripts/Views/Estoque/Lista.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Lista.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>
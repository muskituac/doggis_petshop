@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Usuário - Cadastro";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/IndexAdministrador?usuario_id=@ViewBag.UsuarioID">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Usuario/Lista?usuario_id=@ViewBag.UsuarioID">Usuários</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cadastro</li>
    </ol>
</nav>

<div class="jumbotron">
    <h3>Cadastro de usuários</h3>
    <p class="lead">
        Cadastro de novos usuários.
    </p>
    <hr class="my-4">
    <p>Para acessar a lista dos usuários cadastros clique no botão abaixo.</p>
    <a class="btn btn-primary" href="~/Usuario/Lista?usuario_id=@ViewBag.UsuarioID" role="button">Ir para lista de usuários</a>
</div>

<form>
    <div class="form-group row">
        <label for="usuario_id" class="col-sm-2 col-form-label">Codigo:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="usuario_id" placeholder="" values="" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="usuario_nome" class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="usuario_nome" placeholder="Informe o nome do usuário">
        </div>
    </div>
    <div class="form-group row">
        <label for="usuario_usuario_tipo" class="col-sm-2 col-form-label">Tipo:</label>
        <div class="col-sm-10">
            <select class="form-control" id="usuario_usuario_tipo">
                <option value="">Selecione um tipo de usuário...</option>
                <option value="1">Administrador</option>
                <option value="2">Atendente</option>
                <option value="3">Cliente</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="usuario_login" class="col-sm-2 col-form-label">Login:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="usuario_login" placeholder="Informe o login do usuário">
        </div>
    </div>
    <div class="form-group row">
        <label for="usuario_senha" class="col-sm-2 col-form-label">Senha:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="usuario_senha" placeholder="Informe a senha do usuário">
        </div>
    </div>
    <div class="form-group row">
        <label for="usuario_ultima_alteracao" class="col-sm-2 col-form-label">Ultima alteração:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="usuario_ultima_alteracao" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="usuario_responsavel" class="col-sm-2 col-form-label">Responsável:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="usuario_responsavel" value="" readonly disabled>
        </div>
    </div>

    <div class="form-group row p-3" id="content_form_button">
        <a href="javascript:void(0);" class="btn btn-success mr-2" id="btn_usuario_salvar">Salvar</a>
        <a href="javascript:void(0);" class="btn btn-danger" id="btn_usuario_cancelar">Cancelar</a>
    </div>

    <div class="form-group row d-none" id="content_form_message">
        <label class="alert alert-success d-none" id="message_success">
            Usuário salvo com sucesso. Clique <a href="~/Usuario/Cadastro?usuario_id=@ViewBag.UsuarioID">aqui</a> para realizar um novo cadastro.
        </label>
        <label class="alert alert-danger d-none" id="message_fail">Falha ao registrar o usuário.</label>
    </div>

    <div class="form-group row d-none" id="content_form_loader">
        <img src="~/Content/images/loader.gif" />
    </div>
</form>

<script src="~/Scripts/ViewModel/ViewModelCadastroUsuario.js"></script>
<script src="~/Scripts/Views/Usuario/Cadastro.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Cadastro.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>

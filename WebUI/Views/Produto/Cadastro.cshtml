@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Produto - Cadastro";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/IndexAdministrador?usuario_id=@ViewBag.UsuarioID">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Produto/Lista?usuario_id=@ViewBag.UsuarioID">Produtos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cadastro</li>
    </ol>
</nav>

<div class="jumbotron">
    <h3>Cadastro de produtos</h3>
    <p class="lead">
        Cadastro de novos produtos.
    </p>
    <hr class="my-4">
    <p>Para acessar a lista dos produtos cadastros clique no botão abaixo.</p>
    <a class="btn btn-primary" href="~/Produto/Lista?usuario_id=@ViewBag.UsuarioID" role="button">Ir para lista de produtos</a>
</div>

<form>
    <div class="form-group row">
        <label for="produto_id" class="col-sm-2 col-form-label">Codigo:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="produto_id" placeholder="" values="" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_nome" class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="produto_nome" placeholder="Informe o nome do produto">
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_fabricante" class="col-sm-2 col-form-label">Fabricante:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="produto_fabricante" placeholder="Informe o fabricante do produto">
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_especificacoes" class="col-sm-2 col-form-label">Especificações:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="produto_especificacoes" placeholder="Informe as especificações do produto">
            </textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_valor_atual" class="col-sm-2 col-form-label">Valor atual:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="produto_valor_atual" placeholder="Informe o valor atual do produto">
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_pataz_bonus" class="col-sm-2 col-form-label">PATAZ (bônus):</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="produto_pataz_bonus" placeholder="Informe o bônus em PATAZ do produto">
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_pataz_custo" class="col-sm-2 col-form-label">PATAZ (custo):</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="produto_pataz_custo" placeholder="Informe o custo em PATAZ do produto">
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_ultima_alteracao" class="col-sm-2 col-form-label">Ultima alteração:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="produto_ultima_alteracao" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="produto_responsavel" class="col-sm-2 col-form-label">Responsável:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="produto_responsavel" value="" readonly disabled>
        </div>
    </div>

    <div class="form-group row p-3" id="content_form_button">
        <a href="javascript:void(0);" class="btn btn-success mr-2" id="btn_produto_salvar">Salvar</a>
        <a href="javascript:void(0);" class="btn btn-danger" id="btn_produto_cancelar">Cancelar</a>
    </div>

    <div class="form-group row d-none" id="content_form_message">
        <label class="alert alert-success" id="message_success">
            Produto salvo com sucesso. Clique <a href="~/Produto/Cadastro?usuario_id=@ViewBag.UsuarioID">aqui</a> para realizar um novo cadastro.
        </label>
        <label class="alert alert-danger" id="message_fail">Falha ao registrar o produto.</label>
    </div>

    <div class="form-group row d-none" id="content_form_loader">
        <img src="~/Content/images/loader.gif" />
    </div>
</form>

<script src="~/Scripts/ViewModel/ViewModelCadastroProduto.js"></script>
<script src="~/Scripts/Views/Produto/Cadastro.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Cadastro.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>

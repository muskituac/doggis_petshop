@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Promocao - Cadastro";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/IndexAdministrador?usuario_id=@ViewBag.UsuarioID">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Promocao/Lista?usuario_id=@ViewBag.UsuarioID">Promoções</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cadastro</li>
    </ol>
</nav>

<div class="jumbotron">
    <h3>Cadastro de promoções</h3>
    <p class="lead">
        Cadastro de novas promoções.
    </p>
    <hr class="my-4">
    <p>Para acessar a lista das promoções cadastradas clique no botão abaixo.</p>
    <a class="btn btn-primary" href="~/Promocao/Lista?usuario_id=@ViewBag.UsuarioID" role="button">Ir para lista de promoções</a>
</div>

<form>
    <div class="form-group row">
        <label for="promocao_id" class="col-sm-2 col-form-label">Codigo:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="promocao_id" placeholder="" values="" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="promocao_descricao" class="col-sm-2 col-form-label">Descrição:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="promocao_descricao" placeholder="Informe a descrição da promoção">
        </div>
    </div>
    <div class="form-group row">
        <label for="promocao_porcentagem" class="col-sm-2 col-form-label">Porcentagem:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="promocao_porcentagem" placeholder="Informe a porcentagem da promoção">
        </div>
    </div>
    <div class="form-group row">
        <label for="promocao_data_inicio" class="col-sm-2 col-form-label">Início:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="promocao_data_inicio" placeholder="Informe a data de início da promoção">
        </div>
    </div>
    <div class="form-group row">
        <label for="promocao_data_termino" class="col-sm-2 col-form-label">Término:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="promocao_data_termino" placeholder="Informe a data de término da promoção">
        </div>
    </div>
    <div class="form-group row">
        <label for="promocao_ultima_alteracao" class="col-sm-2 col-form-label">Ultima alteração:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="promocao_ultima_alteracao" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="promocao_responsavel" class="col-sm-2 col-form-label">Responsável:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="promocao_responsavel" value="" readonly disabled>
        </div>
    </div>

    <div class="form-group row">
        <label for="promocao_produtos_content" class="col-sm-2 col-form-label">Produtos:</label>
        <div class="col-sm-10" id="promocao_produtos_content">

        </div>
    </div>

    <div class="form-group row">
        <label for="promocao_servicos_content" class="col-sm-2 col-form-label">Serviços:</label>
        <div class="col-sm-10" id="promocao_servicos_content">

        </div>
    </div>

    <div class="form-group row p-3" id="content_form_button">
        <a href="javascript:void(0);" class="btn btn-success mr-2" id="btn_promocao_salvar">Salvar</a>
        <a href="javascript:void(0);" class="btn btn-danger" id="btn_promocao_cancelar">Cancelar</a>
    </div>

    <div class="form-group row d-none" id="content_form_message">
        <label class="alert alert-success d-none" id="message_success">
            Promoção salva com sucesso. Clique <a href="~/Promocao/Cadastro?usuario_id=@ViewBag.UsuarioID">aqui</a> para realizar um novo cadastro.
        </label>
        <label class="alert alert-danger d-none" id="message_fail">Falha ao registrar a promoção.</label>
    </div>

    <div class="form-group row d-none" id="content_form_loader">
        <img src="~/Content/images/loader.gif" />
    </div>
</form>

<script src="~/Scripts/ViewModel/ViewModelCadastroPromocao.js"></script>
<script src="~/Scripts/ViewModel/ViewModelCadastroPromocaoProduto.js"></script>
<script src="~/Scripts/ViewModel/ViewModelCadastroPromocaoServico.js"></script>
<script src="~/Scripts/Views/Promocao/Cadastro.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Cadastro.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>

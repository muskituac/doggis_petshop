@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Doggis PetShop</h1>
    <p class="lead">
        Área destinada ao <b>ADMINSITRADOR</b> da Doggis PetShop.<br>
        Seja bem vindo, <b id="usuario_nome"></b>.
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Vendas & Agendamentos</h3>
        <p>Realize Vendas e Agendamentos de serviços.</p>
        <p><a class="btn btn-primary w-100 text-left" href="Venda/Cadastro">Nova VENDA</a></p>
        <p><a class="btn btn-primary w-100 text-left" href="~/Agendamento/Cadastro?usuario_id=@ViewBag.UsuarioID">Novo AGENDAMENTO</a></p>
    </div>
    <div class="col-md-4">
        <h3>Produtos & Serviços</h3>
        <p>
            Administração dos Produtos e Serviços.
        </p>
        <p><a class="btn btn-outline-primary w-100 text-left" href="~/Produto/Cadastro?usuario_id=@ViewBag.UsuarioID">Cadastro de PRODUTOS</a></p>
        <p><a class="btn btn-outline-primary w-100 text-left" href="~/Servico/Cadastro?usuario_id=@ViewBag.UsuarioID">Cadastro de SERVIÇOS</a></p>
        <hr />
        <p><a class="btn btn-outline-warning w-100 text-left" href="~/Estoque/Entrada?usuario_id=@ViewBag.UsuarioID">Cadastro de ENTRADA NO ESTOQUE</a></p>
    </div>
    <div class="col-md-4">
        <h3>Clientes & Pets</h3>
        <p>Administração dos Clientes e seus Pets.</p>
        <p><a class="btn btn-outline-primary w-100 text-left" href="~/Cliente/Cadastro?usuario_id=@ViewBag.UsuarioID">Novo CLIENTE</a></p>
        <p><a class="btn btn-outline-primary w-100 text-left" href="~/Pet/Cadastro?usuario_id=@ViewBag.UsuarioID">Novo PET</a></p>
        <p><a class="btn btn-outline-primary w-100 text-left" href="~/Cliente/Lista?usuario_id=@ViewBag.UsuarioID">CLIENTES cadastrados</a></p>
        <p><a class="btn btn-outline-primary w-100 text-left" href="~/Pet/Lista?usuario_id=@ViewBag.UsuarioID">PETS cadastrados</a></p>
        <hr />
        <p><a class="btn btn-outline-warning w-100 text-left" href="Pataz/Consulta">Consulta de PATAZ</a></p>
    </div>
</div>


<script src="~/Scripts/Views/Home/IndexAdministrador.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        IndexAdministrador.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>
@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Veterinário - Cadastro";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/IndexAdministrador?usuario_id=@ViewBag.UsuarioID">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Veterinario/Lista?usuario_id=@ViewBag.UsuarioID">Veterinários</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cadastro</li>
    </ol>
</nav>

<div class="jumbotron">
    <h3>Cadastro de veterinários</h3>
    <p class="lead">
        Cadastro de novos veterinários.
    </p>
    <hr class="my-4">
    <p>Para acessar a lista dos veterinários cadastros clique no botão abaixo.</p>
    <a class="btn btn-primary" href="~/Veterinario/Lista?usuario_id=@ViewBag.UsuarioID" role="button">Ir para lista de veterinários</a>
</div>

<form>
    <div class="form-group row">
        <label for="veterinario_id" class="col-sm-2 col-form-label">Codigo:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_id" placeholder="" values="" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_nome" class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_nome" placeholder="Informe o nome do veterinário">
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_cpf" class="col-sm-2 col-form-label">CPF:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_cpf" placeholder="Informe o cpf do veterinário">
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_identidade" class="col-sm-2 col-form-label">Identidade:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_identidade" placeholder="Informe a identidade do veterinário">
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_registro" class="col-sm-2 col-form-label">Registro:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_registro" placeholder="Informe o registro do veterinário">
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_id_funcionario" class="col-sm-2 col-form-label">Funcionário:</label>
        <div class="col-sm-10">
            <select class="form-control" id="veterinario_id_funcionario">
                <option vlaue="">Selecione um funcionário...</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_ultima_alteracao" class="col-sm-2 col-form-label">Ultima alteração:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_ultima_alteracao" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" readonly disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="veterinario_responsavel" class="col-sm-2 col-form-label">Responsável:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="veterinario_responsavel" value="" readonly disabled>
        </div>
    </div>

    <div class="form-group row">
        <label for="veterinario_pet_tipo" class="col-sm-2 col-form-label">Tipos de PETs atendidos:</label>
        <div class="col-sm-10" id="veterinario_pet_tipo_content">
            
        </div>
    </div>

    <div class="form-group row p-3" id="content_form_button">
        <a href="javascript:void(0);" class="btn btn-success mr-2" id="btn_veterinario_salvar">Salvar</a>
        <a href="javascript:void(0);" class="btn btn-danger" id="btn_veterinario_cancelar">Cancelar</a>
    </div>

    <div class="form-group row d-none" id="content_form_message">
        <label class="alert alert-success d-none" id="message_success">
            Veterinário salvo com sucesso. Clique <a href="~/Veterinario/Cadastro?usuario_id=@ViewBag.UsuarioID">aqui</a> para realizar um novo cadastro.
        </label>
        <label class="alert alert-danger d-none" id="message_fail">Falha ao registrar o cliente.</label>
    </div>

    <div class="form-group row d-none" id="content_form_loader">
        <img src="~/Content/images/loader.gif" />
    </div>
</form>

<script src="~/Scripts/ViewModel/ViewModelCadastroVeterinario.js"></script>
<script src="~/Scripts/ViewModel/ViewModelCadastroVeterinarioPetTipo.js"></script>
<script src="~/Scripts/Views/Veterinario/Cadastro.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Cadastro.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>

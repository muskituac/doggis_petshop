<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Doggis Pet Shop</title>

    <!--jQuery-->
    <script src="~/Scripts/imports/jquery-3.4.1/jquery-3.4.1.js"></script>
    <!--Bootstrap-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/imports/bootstrap-4.3.1/dist/css/bootstrap.css">
    <script src="~/Scripts/imports/bootstrap-4.3.1/dist/js/bootstrap.js"></script>
    <!-- Local css -->
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    <!-- Local js -->
    <link rel="stylesheet" type="text/css" href="~/Scripts/Site.js">

</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-primary text-white mb-3">
        <label  class="navbar-brand  text-white">Aguarde...</label>
    </nav>

    <div class="container body-content mt-5 mb-5 p-3">
        @RenderBody()
    </div>

    <div class="fixed-bottom container-fluid mt-5 p-1 bg-light">
        <footer>
            <p><small class="text-muted">&copy; @DateTime.Now.Year - Doggis Pet Shop - By Fabrício A. da Costa</small></p>
        </footer>
    </div>

    <div id="content_modal"></div>
</body>
</html>

<script src="~/Scripts/Views/Layout/_LayoutHome.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        _LayoutHome.Initialize('@ViewBag.API_URL', '@ViewBag.UsuarioID');
    });
</script>